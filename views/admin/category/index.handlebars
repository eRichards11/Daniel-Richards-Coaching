{{#if (equal user._id '62e2cf79cf3ea96185dc9bb4')}}

<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">All Categories </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                    <th>Title</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark category-list">
                    {{#each categories}}
                    <tr>
                        <td>{{title}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="category-title" name="title" placeholder="Enter Title">
                </div>
                    <button class="btn btn-outline-success btn-lg" id="create-category-button">Create Category</button>
        </div>
    </div>


</div>

{{/if}}